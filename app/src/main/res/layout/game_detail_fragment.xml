<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/game_detail_constraint_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.GameDetailFragment"
        tools:layout_editor_absoluteY="81dp">

        <ImageView
            android:id="@+id/game_detail_header_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/header_image_height"
            android:background="@color/colorAccent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_videogame_asset_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <ImageView
            android:id="@+id/game_detail_cover_image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_gamepad_black_24dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/game_detail_header_image" />

        <TextView
            android:id="@+id/game_detail_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            app:layout_constraintStart_toEndOf="@+id/game_detail_cover_image_view"
            app:layout_constraintTop_toTopOf="@+id/game_detail_cover_image_view" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="28dp"
            android:text="+ Add to Library"
            app:layout_constraintBottom_toBottomOf="@+id/game_detail_cover_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_detail_cover_image_view" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="+"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            tools:layout_editor_absoluteY="349dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="349dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>